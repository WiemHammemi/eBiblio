<AnchorPane prefHeight="720.0" prefWidth="1200.0" style="-fx-background-color: #F8FAFC;" stylesheets="@../CSS/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.DashboardController">
   <children>
      <!-- SIDEBAR -->
      <AnchorPane prefHeight="720.0" prefWidth="280.0" styleClass="sidebar-nav">
         <children>
            <!-- Logo Container -->
            <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="80.0" prefWidth="240.0" styleClass="library-logo-container">
               <children>
                  <Label styleClass="library-logo-text" text="eBiblio" textAlignment="CENTER">
