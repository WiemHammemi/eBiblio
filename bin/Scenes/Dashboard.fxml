                        <VBox spacing="5.0">
                           <children>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Text fill="#64748B" text="Rotation livres" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font size="12.0" />
