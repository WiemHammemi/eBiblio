                              <Rectangle arcHeight="15.0" arcWidth="15.0" fill="linear-gradient(to bottom right, #667eea, #764ba2)" height="60.0" width="60.0" />
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" translateX="-75.0">
