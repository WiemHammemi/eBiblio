                     <padding>
                        <Insets left="15.0" right="15.0" />
                     </padding>
                  </HBox>
                  
                  <!-- Emprunts Button -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="nav-button">
                     <children>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/emprunt.PNG" />
                           </image>
